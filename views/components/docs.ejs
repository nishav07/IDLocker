<div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-4">
  
    <!-- <p class="text-center text-gray-500 col-span-full">No documents uploaded yet</p> -->
    
    <% for(let doc of data) { %>
      <div class="bg-white rounded-xl shadow-md p-4 flex flex-col items-center border-2 border-gray-400">
        <img src="<%= doc.imgPath %>" alt="<%= doc.name %>" class="w-40 h-40 object-cover rounded-lg mb-4">
        <h2 class="text-lg font-semibold"><%= doc.name %></h2>
        <p class="text-sm text-gray-500">ID: <%= doc.docsID %></p>


        <div class="mt-3 flex gap-2">
          <a href="<%= doc.imgPath %>"  class="px-3 py-1 bg-sky-500 text-black rounded hover:bg-blue-600" download>Download</a>
        </div>
      </div>
  <% } %>
</div>
